    <div class="container_">
        <h2 class = title><b>Writing a report</b></h2>
        <h3>[ 운영체제 ]</h3>
        <form action="/add2" method="POST">
            <input class="day" type = "text" placeholder="주차_요일 형식으로 입력하세요." name="days">
            <div>
                <div>
                    <div><b>Essay</b></div>
                    <div>
                        <div><b>Topic</b></div>
                        <p class="title2_r"><%= data.title2 %></p>
                    </div>
                    <div>
                        <div><b>Text</b></div>
                        <p class="contents_r"><%= data.contents %><br><br><br><br><br></p>
                    </div>
                    <div>
                        <div><b>References</b></div>
                        <p class="references_r"><%= data.references %><br><br><br><br><br></p>
                    </div>
                </div>
                <div>
                    <div><b>Report</b></div>
                    <textarea class="report" type="text"  placeholder="학습 후 보고서를 입력하세요." name="reports"></textarea>
                </div>
                <div>
                    <button class="but" type="submit" value="Submit">Submit</button>
                </div>
            </div>
        </form>
    </div>

